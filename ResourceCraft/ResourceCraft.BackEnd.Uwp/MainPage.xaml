<Page
    x:Class="ResourceCraft.BackEnd.Uwp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ResourceCraft.BackEnd.Uwp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">

    <Grid>
        <ProgressRing Name="AppProgressRing" IsActive="False" Width="100" Height="100" />
        <ScrollViewer>
            <StackPanel Margin="48" Spacing="24">
                <Button Name="DownloadMinecraftVersionsButton" Content="Download Mincraft Versions" Click="DownloadMinecraftVersionsButton_Click" />
                <Button Name="DownloadMincraftResourcesButton" Content="Download Mincraft Resources" Click="DownloadMinecraftResourcesButton_Click" />
                <Button Name="CreateMinecraftRelationsButton" Content="Create Minecraft Relations" Click="CreateMinecraftRelationsButton_Click" />
                <Button Name="LoadMinecraftRelationsButton" Content="Load Minecraft Relations" Click="LoadMinecraftRelationsButton_Click" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
