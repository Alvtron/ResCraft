<UserControl
    x:Class="ResourceCraft.Uwp.Controls.AsyncPersonPicture"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ResourceCraft.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <PersonPicture Name="ImageHolder" Width="{x:Bind Width, Mode=OneWay}" Height="{x:Bind Height, Mode=OneWay}" Initials="{x:Bind Inititals, Mode=OneWay}" DisplayName="{x:Bind DisplayName, Mode=OneWay}" />
</UserControl>
